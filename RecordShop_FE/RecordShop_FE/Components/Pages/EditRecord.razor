@page "/records/edit/{Id:int}"
@using RecordShop
@using RecordShop.Components
@rendermode InteractiveServer

<RecordLoader Id="Id" PageContext="Page.EditRecord"/>

@code {
    [Parameter]
    public Album? Album { get; set; }

    [Parameter]
    public EventCallback<Album> OnUpdate { get; set; }

    [Parameter]
    public int Id { get; set; }

    public void UpdateAlbum()
    {
        OnUpdate.InvokeAsync(Album);
    }
}



