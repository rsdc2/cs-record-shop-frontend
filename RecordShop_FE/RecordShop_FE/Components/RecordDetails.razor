@using RecordShop
@using Microsoft.Extensions.Logging
@rendermode InteractiveServer
@inject ILogger<RecordDetails> logger

<tr>
    @if (EditMode) 
    {
        <RecordEditor Album="Album" OnUpdate="UpdateAlbum"/>
    }
    else 
    {
        <RecordSummary Album="Album" StatusCode="StatusCode" OnEditRecord="ToggleFormVisible" />
    }
</tr>

@code {
    private RecordHttpRequests httpUtils = new RecordHttpRequests();

    private bool EditMode { get; set; } = false;

    [Parameter]
    public int StatusCode { get; set; }

    [Parameter] 
    public Album? Album { get; set; }

    [Parameter] 
    public EventCallback<Album> OnUpdateAlbum { get; set; }


    private void Submit()
    {
        logger.LogInformation(Album.ToString());
    }

    private void ToggleFormVisible(bool editMode) => EditMode = !editMode;

    private void UpdateAlbum(Album album) {
        ToggleFormVisible(EditMode);
        Album = album;
        StatusCode = (int)httpUtils.UpdateRecord(album).StatusCode;
    }
}
