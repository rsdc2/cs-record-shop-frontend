@using RecordShop

@if (Album is null)
{
    <Loading />
}
else
{
    <RecordDetails Album="Album" />
}

@code {
    RecordHttpRequests http = new RecordHttpRequests();

    private Album? Album { get; set; }

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Album = await http.GetAlbumById(Id);
    }
}
